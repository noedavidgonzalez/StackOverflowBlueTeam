<h2>Registrate carnal </h2>


<form action="/signup" method="POST" id="form-container">
  <label for="username">Tu nombre va aqui tontin</label>
  <input type="text" name="username" placeholder="tu nombre" id="username">
    <br>
  <label for="email">Email</label>
  <input type="text" name="mail" placeholder="gatitos.lindos@noHomo.com">
    <br>
  <label for="password">Contraseña</label>
  <input type="password" name="password" id="password" placeholder="Contraseña">
    <br>
  {{#if message}}
  <div class="error-message">
    {{message}}
  </div>
  {{/if}}

  <button type="submit" name="button">Crea tu cuenta</button>
    <br>
  <p class="account-message">
    Ya tienes una cuenta? <a href="/login">Ingresa</a>
  </p>
</form>